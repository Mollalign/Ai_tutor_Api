# ===========================================
# AI Study Tutor - Environment Variables
# ===========================================
# Copy this file to .env and fill in your values
# NEVER commit .env to git!

# -------------------------------------------
# Database (PostgreSQL)
# -------------------------------------------
# For Neon: postgresql+asyncpg://user:password@host/database
DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/ai_tutor

# -------------------------------------------
# Redis (for ARQ background tasks)
# -------------------------------------------
# Local: redis://localhost:6379/0
# Upstash: redis://default:xxx@xxx.upstash.io:6379
REDIS_URL=redis://localhost:6379/0

# -------------------------------------------
# Security
# -------------------------------------------
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-super-secret-key-at-least-32-characters

# JWT settings
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_DAYS=7

# -------------------------------------------
# Google Gemini API
# -------------------------------------------
# Get your key at: https://aistudio.google.com/apikey
GEMINI_API_KEY=your-gemini-api-key
GEMINI_MODEL=gemini-2.0-flash

# -------------------------------------------
# Application Settings
# -------------------------------------------
PROJECT_NAME=AI Study Tutor
DEBUG=false
LOG_LEVEL=INFO

# Frontend URL (for CORS and share links)
FRONTEND_URL=https://mollalign.vercel.app
CORS_ORIGINS=["https://mollalign.vercel.app","http://localhost:3000"]

# -------------------------------------------
# File Storage
# -------------------------------------------
STORAGE_BACKEND=local
UPLOAD_DIR=storage/uploads
MAX_FILE_SIZE_MB=50
ALLOWED_FILE_EXTENSIONS=["pdf","docx","pptx","txt"]

# -------------------------------------------
# Vector Database (ChromaDB)
# -------------------------------------------
CHROMA_PERSIST_DIRECTORY=storage/chroma
CHROMA_COLLECTION_NAME=documents

# -------------------------------------------
# Embedding Model (Sentence Transformers)
# -------------------------------------------
EMBEDDING_MODEL=all-MiniLM-L6-v2
EMBEDDING_DIMENSION=384
EMBEDDING_BATCH_SIZE=32
EMBEDDING_DEVICE=cpu

# -------------------------------------------
# LLM Settings
# -------------------------------------------
LLM_MAX_TOKENS=2048
LLM_TEMPERATURE=0.7
RAG_MAX_CONTEXT_TOKENS=2000

# -------------------------------------------
# Email (Optional - for password reset)
# -------------------------------------------
# SMTP_EMAIL=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
# SMTP_SERVER=smtp.gmail.com
# SMTP_PORT=587
